 <%- include("partials/header") %>

<div class="wrapper">
<div class="row">

	

<div class="col-lg-12 col-xl-4 mb-4">
<div class="box-content coleql_height">
<center>
	<h3>Add Employee</h3>

	

</center>

</div>
</div>
</div>


<div class="row stats">
<div class="col-md-12 col-lg-12 col-xl-12">
   <% if(success != '') { %>
    <h4 style="color: green; font-family: Arial, Helvetica, sans-serif;"><%= success %> </h4>
   <% } %>


   

   <% if(alert != '') { %>
   <% alert.forEach(function(emper) { %>

    
        <h4 style="color: red; font-family: Arial, Helvetica, sans-serif;"><%= emper.email %> </h4>
    
   <% }) %>
   <% } %>


   <% if(alert != '') { %>
   <% alert.forEach(function(emper) { %>

    
        <h4 style="color: red; font-family: Arial, Helvetica, sans-serif;"><%= emper.emp_name %> </h4>  
    
   <% }) %>
   <% } %>

   


<form action="addEmployeeData" method="post">
<div class="row stats">
<div class="col-md-6 col-lg-6 col-xl-6">

<div class="form-group">
<input type="text" name="emp_name" value="" placeholder="Employee Name" maxlength="30" class="form-control">
<small class="text-danger">Employee Name is required</small>

</div>
</div>

<div class="col-md-6 col-lg-6 col-xl-6">
<div class="form-group">
<input type="email" name="email" value="" placeholder="Email Address" maxlength="30" class="form-control" placeholder="EMAIL">

</div>
</div>

<div class="col-md-6 col-lg-6 col-xl-6">
<div class="form-group">
<input type="password" name="password" value="" class="form-control" placeholder="PASSWORD">

</div>
</div>

<div class="col-md-6 col-lg-6 col-xl-6">
<div class="form-group">
<input type="text" name="designation" value="" maxlength="30" class="form-control" placeholder="designation">
</div>
</div>



<div class="col-md-6 col-lg-6 col-xl-6">
<div class="form-group">
<select class="form-control" name="department">
	<option value="">Select Department</option>
	<option value="IT">IT</option>
	<option value="CS">CS</option>
	<option value="CIVIL">CIVIL</option>
	<option value="ME">ME</option>
	<option value="EC">EC</option>

</select>
</div>
</div>

<div class="col-md-6 col-lg-6 col-xl-6">
<div class="form-group">
<select class="form-control" name="emp_type">
	<option value="">Select Role</option>
	<option value="user">User</option>
	<option value="admin" >Admin</option>
</select>

</div>
</div>



<div class="col-md-6 col-lg-6 col-xl-6">
<div class="form-group">
<input type="number" name="salary" value="" placeholder="Salary" maxlength="30" min="1" class="form-control">
</div>
</div>


<div class="col-md-12 col-lg-12 col-xl-12">
<div class="mb-2 text-center"><input type="submit" class="btn btn-dark" value="Add">
</div>
</div>
</div>

</form>
</div>

</div>
</div>

 <%- include("partials/footer") %>
